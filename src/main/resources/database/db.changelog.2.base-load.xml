<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="2024-03-15-001" author="Andrei Dodu">
        <createTable tableName="${tablePrefix}file_metainfo">
            <column autoIncrement="${autoIncrement}" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_file_metainfo"/>
            </column>
            <column name="title" type="VARCHAR(512)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(4000)">
                <constraints nullable="false"/>
            </column>

            <column name="insert_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="update_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="version" type="INT"/>
        </createTable>


        <createTable tableName="${tablePrefix}book_metainfo">
            <column autoIncrement="${autoIncrement}" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_book_metainfo"/>
            </column>
            <column name="file_metainfo_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_book_file_metainfo"
                             references="${tablePrefix}file_metainfo(id)"/>
            </column>
            <column name="image_url" type="VARCHAR(500)"/>
            <column name="authors" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="VARCHAR(2000)"/>
            <column name="sbn" type="VARCHAR(13)"/>
            <column name="isbn" type="VARCHAR(13)"/>
            <column name="publisher" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="year" type="int"/>
            <column name="insert_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="update_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="version" type="INT"/>
        </createTable>

        <addUniqueConstraint
                columnNames="file_metainfo_id, authors, publisher"
                constraintName="unq_fil_meta_auth_pub"
                tableName="${tablePrefix}book_metainfo"
                validate="true"/>

    </changeSet>

    <changeSet id="2024-03-15-002" author="Andrei Dodu">
        <createTable tableName="${tablePrefix}tag">
            <column autoIncrement="${autoIncrement}" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tag"/>
            </column>
            <column name="name" type="VARCHAR(512)">
                <constraints nullable="false"/>
            </column>
            <column name="insert_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="update_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="version" type="INT"/>
        </createTable>
    </changeSet>


    <changeSet id="2024-03-15-003" author="Andrei Dodu">
        <createTable tableName="${tablePrefix}file_metainfo_tag">
            <column autoIncrement="${autoIncrement}" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tag_file_metainfo"/>
            </column>
            <column name="file_metainfo_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_file_metainfo"
                             references="${tablePrefix}file_metainfo(id)"/>
            </column>
            <column name="tag_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_tag" references="${tablePrefix}tag(id)"/>
            </column>
            <column name="insert_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="update_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="version" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet id="2024-03-15-004" author="Andrei Dodu">
        <createTable tableName="${tablePrefix}file_metainfo_file_system_item">
            <column autoIncrement="${autoIncrement}" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_file_metainfo_file_system_item"/>
            </column>
            <column name="file_metainfo_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_file_metainfo"
                             references="${tablePrefix}file_metainfo(id)"/>
            </column>
            <column name="file_system_item" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_file_system_item"
                             references="${tablePrefix}file_system_item(id)"/>
            </column>
            <column name="insert_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="update_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="version" type="INT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>